String IMAGE_NAME = "mike-test"
String TAG
def IMG_REF

pipeline {

    options {
        ansiColor('xterm')
        disableConcurrentBuilds()
    }
    stages{

        stage("Build ") {
            steps {
                script {
                    TAG = "${IMAGE_NAME}:${env.CHANGE_ID?'PR' + CHANGE_ID + '_':''}${BUILD_NUMBER}_${GIT_COMMIT.take(7)}"
                    IMG_REF = docker.build(TAG, '--pull -f Dockerfile .')
                }
            }
        }
    }
}
